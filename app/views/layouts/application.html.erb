<!DOCTYPE html>
<html>
  <head>
    <title>Bloggard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div>
      <ul>
        <%= link_to 'Home', root_path %>
        <%= link_to 'Blogs', blogs_path %>
        <%= link_to 'Authors', pages_authors_path %>
        <%= link_to 'Subjects', pages_subjects_path %>
        <%= link_to 'Titles', pages_titles_path %>
      </ul>
    </div>
    <%= yield %>
  </body>
</html>
