<h1 class="page_title"><%= @blog.title %></h1>
<hr>
<p><em>by <%= @blog.author.name %></em></p>

<div id="show_blog_div">
  <div>
    <h2><%= @blog.sub_title %></h2>
    <h4><em>-<%= @blog.subject %></em></h4>
  </div>
  <p><%= @blog.body %></p>
  <%= link_to "Edit", edit_blog_path(@blog) %>
  <%= link_to "Delete", blog_path(@blog), method: :delete, data: {confirm: 'are you sure you want to delete this blog?'} %>
<div>
  <%= link_to 'Back to blogs', blogs_path %>